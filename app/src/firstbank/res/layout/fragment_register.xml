<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:filterTouchesWhenObscured="true">

    <data>

        <variable
            name="viewmodel"
            type="com.woleapp.netpos.contactless.viewmodels.RegistrationViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:fillViewport="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/login_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/margin_20"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/existing_customers_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.23000002"
                app:layout_constraintVertical_chainStyle="packed" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/existing_customers_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:errorTextColor="@color/colorError"
                android:hint="@string/title"
                android:textColorHint="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/login_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/username"
                    android:inputType="none"
                    android:background="@drawable/edittext_bg"
                    android:singleLine="true"
                    android:text="@={viewmodel.registrationFBNModel.title}"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp"
                    app:startIconContentDescription="@string/username"
                    tools:text="netpos" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputBusinessName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/business_name"
                android:textColorHint="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/existing_customers_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/businessName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/username"
                    android:background="@drawable/edittext_bg"
                    android:drawablePadding="8dp"
                    android:inputType="text|textNoSuggestions"
                    android:singleLine="true"
                    android:text="@={viewmodel.registrationFBNModel.businessName}"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp"
                    app:startIconContentDescription="@string/username"
                    tools:text="netpos" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_contact_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/fullname"
                android:textColorHint="@android:color/black"
                app:layout_constraintBottom_toTopOf="@id/fragment_state"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textInputBusinessName">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contact_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="@string/username"
                    android:background="@drawable/edittext_bg"
                    android:drawablePadding="8dp"
                    android:inputType="text|textNoSuggestions"
                    android:singleLine="true"
                    android:text="@={viewmodel.registrationFBNModel.contactInformation}"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp"
                    app:startIconContentDescription="@string/username"
                    tools:text="netpos" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_state"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:hint="Select State"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:visibility="visible"
                app:errorTextColor="@color/colorError"
                android:textColorHint="@android:color/black"
                app:endIconDrawable="@drawable/ic_arrow_down_24"
                app:endIconTint="@color/black"
                app:hintEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/text_contact_info"
                app:layout_constraintEnd_toEndOf="@+id/text_contact_info"
                app:layout_constraintStart_toStartOf="@+id/text_contact_info"
                app:layout_constraintBottom_toTopOf="@+id/textInputAddress">

                <AutoCompleteTextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:inputType="none"
                    android:text="@={viewmodel.registrationFBNModel.state}"
                    android:textColor="@android:color/background_dark"
                    android:textCursorDrawable="@color/black"
                    app:backgroundTint="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/business_address"
                android:textColorHint="@android:color/black"
                app:layout_constraintBottom_toTopOf="@id/phoneee"
                app:layout_constraintEnd_toEndOf="@id/text_contact_info"
                app:layout_constraintStart_toStartOf="@id/text_contact_info"
                app:layout_constraintTop_toBottomOf="@id/fragment_state">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:text="@={viewmodel.registrationFBNModel.businessAddress}"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/phone_number"
                android:textColorHint="@android:color/black"
                app:layout_constraintEnd_toEndOf="@+id/textInputAddress"
                app:layout_constraintStart_toStartOf="@+id/textInputAddress"
                app:layout_constraintTop_toBottomOf="@id/textInputAddress">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:drawablePadding="8dp"
                    android:inputType="phone|textNoSuggestions"
                    android:singleLine="true"
                    android:text="@={viewmodel.registrationFBNModel.phoneNumber}"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp"
                    app:endIconMode="password_toggle"
                    tools:text="" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_branch"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:hint="Select Branch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:visibility="visible"
                app:errorTextColor="@color/colorError"
                android:textColorHint="@android:color/black"
                app:endIconDrawable="@drawable/ic_arrow_down_24"
                app:endIconTint="@color/black"
                app:hintEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/phoneee"
                app:layout_constraintEnd_toEndOf="@+id/phoneee"
                app:layout_constraintStart_toStartOf="@+id/phoneee">

                <AutoCompleteTextView
                    android:id="@+id/branch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:inputType="none|textNoSuggestions"
                    android:text="@={viewmodel.registrationFBNModel.branch_name}"
                    android:textColor="@android:color/background_dark"
                    android:textCursorDrawable="@color/black"
                    android:visibility="visible"
                    app:backgroundTint="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_lga_by_state"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Select LGA"
                android:textColorHint="@android:color/black"
                android:visibility="gone"
                app:endIconDrawable="@drawable/ic_arrow_down_24"
                app:endIconTint="@color/black"
                app:errorEnabled="true"
                app:errorTextColor="@color/colorError"
                app:hintEnabled="true"
                app:layout_constraintEnd_toEndOf="@+id/fragment_branch"
                app:layout_constraintStart_toStartOf="@+id/fragment_branch"
                app:layout_constraintTop_toBottomOf="@+id/fragment_branch">

                <AutoCompleteTextView
                    android:id="@+id/lga_by_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:inputType="none"
                    android:textColor="@android:color/background_dark"
                    android:textCursorDrawable="@color/black"
                    android:visibility="visible"
                    app:backgroundTint="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_merchant_category_code"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Select Category Code"
                android:textColorHint="@android:color/black"
                android:visibility="gone"
                app:endIconDrawable="@drawable/ic_arrow_down_24"
                app:endIconTint="@color/black"
                app:errorEnabled="true"
                app:errorTextColor="@color/colorError"
                app:hintEnabled="true"
                app:layout_constraintEnd_toEndOf="@+id/fragment_lga_by_state"
                app:layout_constraintStart_toStartOf="@+id/fragment_lga_by_state"
                app:layout_constraintTop_toBottomOf="@+id/fragment_lga_by_state">

                <AutoCompleteTextView
                    android:id="@+id/merchant_category_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:inputType="none"
                    android:textColor="@android:color/background_dark"
                    android:textCursorDrawable="@color/black"
                    android:visibility="visible"
                    app:backgroundTint="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter_email_address"
                android:textColorHint="@android:color/black"
                app:layout_constraintEnd_toEndOf="@+id/fragment_branch"
                app:layout_constraintStart_toStartOf="@+id/fragment_branch"
                app:layout_constraintTop_toBottomOf="@id/fragment_merchant_category_code">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:drawablePadding="8dp"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:singleLine="true"
                    android:text="@={viewmodel.registrationFBNModel.email}"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp"
                    app:endIconMode="password_toggle"
                    tools:text="" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bvn_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/bvn"
                app:errorEnabled="true"
                android:visibility="gone"
                app:errorTextColor="@color/colorError"
                android:textColorHint="@android:color/black"
                app:layout_constraintEnd_toEndOf="@id/email_field"
                app:layout_constraintStart_toStartOf="@id/email_field"
                app:layout_constraintTop_toBottomOf="@+id/email_field">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bvn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:drawablePadding="8dp"
                    android:inputType="number|textNoSuggestions"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp"
                    tools:text="" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_tin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/tin"
                app:errorEnabled="true"
                android:visibility="gone"
                app:errorTextColor="@color/colorError"
                android:textColorHint="@android:color/black"
                app:layout_constraintEnd_toEndOf="@id/bvn_field"
                app:layout_constraintStart_toStartOf="@id/bvn_field"
                app:layout_constraintTop_toBottomOf="@+id/bvn_field">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:drawablePadding="8dp"
                    android:singleLine="true"
                    android:inputType="number|textNoSuggestions"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp"
                    tools:text=""/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                app:errorEnabled="true"
                android:visibility="gone"
                app:passwordToggleEnabled="true"
                app:errorTextColor="@color/colorError"
                android:textColorHint="@android:color/black"
                app:layout_constraintEnd_toEndOf="@id/email_field"
                app:layout_constraintStart_toStartOf="@id/email_field"
                app:layout_constraintTop_toBottomOf="@+id/fragment_tin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:drawablePadding="8dp"
                    android:inputType="textPassword|textNoSuggestions"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp"
                    tools:text="" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirm_password_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/confirm_password"
                app:errorEnabled="true"
                android:visibility="gone"
                app:errorTextColor="@color/colorError"
                android:textColorHint="@android:color/black"
                app:passwordToggleEnabled="true"
                app:layout_constraintEnd_toEndOf="@id/email_field"
                app:layout_constraintStart_toStartOf="@id/email_field"
                app:layout_constraintTop_toBottomOf="@+id/password_field">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:drawablePadding="8dp"
                    android:inputType="textPassword|textNoSuggestions"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="15sp"
                    tools:text="" />
            </com.google.android.material.textfield.TextInputLayout>


            <CheckBox
                android:id="@+id/myCheckBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/i_agree_to_the_terms_and_conditions"
                app:layout_constraintEnd_toEndOf="@+id/email_field"
                app:layout_constraintStart_toStartOf="@+id/email_field"
                app:layout_constraintTop_toBottomOf="@+id/fragment_tin" />


            <Button
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="48dp"
                android:text="@string/submit"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:textColor="@android:color/white"
                app:buttonInProgress="@{viewmodel.authInProgress}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myCheckBox" />

            <ProgressBar
                android:id="@+id/auth_progress"
                progressBarInProgress="@{viewmodel.authInProgress}"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginVertical="8dp"
                android:elevation="2dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/btn_login"
                app:layout_constraintEnd_toEndOf="@id/btn_login"
                app:layout_constraintTop_toTopOf="@id/btn_login" />


            <!--            <androidx.appcompat.widget.AppCompatSpinner-->
            <!--                android:id="@+id/spnBank"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginStart="@dimen/dimen_16dp"-->
            <!--                android:layout_marginTop="@dimen/dimen_16dp"-->
            <!--                android:layout_marginEnd="@dimen/dimen_16dp"-->
            <!--                android:prompt="@string/hint_choose_bank_caps"-->
            <!--                android:spinnerMode="dropdown"-->
            <!--                android:textColorHint="@android:color/black"-->
            <!--                android:textSize="15sp"-->
            <!--                app:layout_constraintTop_toBottomOf="@id/email_field" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>